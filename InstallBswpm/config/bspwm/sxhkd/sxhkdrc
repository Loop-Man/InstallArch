#################################################################
# CTRL + ALT KEYS
#################################################################

#Compton Toggle
ctrl + alt + o
    ~/.config/bspwm/scripts/picom-toggle.sh

#################################################################
# SUPER + KEYS (State Windows)
#################################################################

#Toggle fullscreen of window
super + f
	bspc node --state \~fullscreen

# Toggle pseudo tiling of window
super + p
	bspc node --state \~pseudo_tiled

# Toggle tiled of window
super + t
	bspc node --state \~tiled
	
# Expand tiled space (Aumenta, o disminuye tama침o de la ventana)
super + alt + {h,j,k,l}
	bspc node {@west -r -10,@north -r +10,@north -r -10,@west -r +10}
	
# set the window state (Establece la ventana flotante)
super + s
	bspc node --state \~floating
	
# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Custom move/resize
alt + ctrl + shift + {Left,Down,Up,Right}
	/home/orion/.config/bspwm/scripts/bspwm_resize {west,south,north,east}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

#kill
super + q
	bspc node -c

#################################################################
# SUPER KEYS (FOCUS/SWAP)
#################################################################

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# Increase/decrease window gap on focused desktop
super + bracket{left,right}
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` {-,+} 5 ))

# swap the current node and the biggest local node
super + space
	bspc node -f next.local

# Move focus to other monitor
super + BackSpace
		bspc monitor -f next
		
#################################################################
# SUPER + SHIFT KEYS
#################################################################

# Focus/swap windows by direction
super + {_,shift + }{h,j,k,l}
	bspc node --{focus,swap} {west,south,north,east}

# Flip layout vertically/horizontally
super + {_,shift + }a
	bspc node @/ --flip {vertical,horizontal}

#################################################################
# SUPER + CONTROL KEYS (Preselection)
#################################################################

# Focus/swap windows by direction
super + ctrl + {Left,Down,Up,Right}
	bspc node --{focus} {west,south,north,east}

# Contract tiled space
super + ctrl + {h,j,k,l}
	bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

# preselect the direction
super + ctrl + alt + {Left,Down,Up,Right}
	bspc node --presel-dir \~{west,south,north,east}
	
# Define splitting ratio for next window on leaf/parent 
super + ctrl + {_,shift +}{1-9}
	bspc node {_,@/} --presel-ratio 0.{1-9}

# Cancel preselection
super + ctrl + space
	bspc node --presel-dir cancel

#################################################################
# ALT KEYS
#################################################################

#Focus selected desktop
alt + Tab
	bspc desktop -f '^{1-9,10}'

#Rotate desktop
alt + space
	bspc node @/ --rotate {90,-90}
	
#################################################################

#Focus selected desktop FOR QWERTY KEYBOARDS
super + {1-9,0}
	bspc desktop -f '^{1-9,10}'

#Move window to selected desktop FOR QWERTY KEYBOARDS
super + shift + {1-9,0}
    id=$(bspc query -N -n); bspc node -d ^{1-9,10}; bspc node -f ${id}}

