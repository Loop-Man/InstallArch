#################################################################
# SUPER + SHIFT KEYS
#################################################################

#File-Manager
super + shift + Return
	thunar

#dmenu
super + shift + d
	dmenu_run -i -nb '#191919' -nf '#fea63c' -sb '#fea63c' -sf '#191919' -fn 'NotoMonoRegular:bold:pixelsize=15'

#reload sxhkd:
super + shift + s
	pkill -USR1 -x sxhkd
	
#Reload bspwm
super + shift + r
	~/.config/bspwm/bspwmrc

#Logout
super + shift + x
	bspc quit

#Nmtui (Interfaz grafica para gestionar la red)
super + shift + w
	exec urxvt -e nmtui

