	rofi -show run

#Oblogout (Gestor de sesion)
super + x
    oblogout

#Ranger (Navegador de directorios por cli)
super + r
	exec urxvt -e ranger

#urxvt (Terminal)
super + Return
    urxvt

#Burpsuite
super + b
	gksudo burpsuite

#Xkill (Matar graficamente cualquier programa congelado)
super + Escape
    xkill
    
